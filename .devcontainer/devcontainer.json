{
  "name": "Devcontainer",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",  // Minimal base image
  "runArgs": [
    "--env-file", "${localWorkspaceFolder}/.devcontainer/.env"  // Sets .devcontainer/.env as environment in container
  ],
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {"version": "latest"},
    "ghcr.io/devcontainers/features/azure-cli:1": {} // Installs Azure CLI
  },
  "postCreateCommand": "az version",
  "customizations": {
		"vscode": {
			"extensions": [
				"github.vscode-github-actions",
				"github.vscode-pull-request-github",
        "ms-vscode.azurecli"
			]
		}
	},
  // "mounts": [
  //   "source=${localEnv:HOME}/.azure,target=/home/vscode/.azure,type=bind,consistency=cached" // Mounts Azure CLI config from host
  // ]
}
